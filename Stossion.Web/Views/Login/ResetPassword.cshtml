@using Stossion.ViewModels.User;
@model ForgetPasswordViewModel
@{
    Layout = Layout = "~/Views/Shared/_MasterLayout.cshtml";
    ViewData["Title"] = "Forget Password";
}

<link href="~/css/site.css" rel="stylesheet" />
<script src="~/js/login/login.js"></script>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Stossion.Web</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

        </div>
    </nav>
</header>
<div class="container emailBox" id="emailBox">
    <input id="resetUsername" value="@Model.Username" hidden />
    <input id="token" value="@Model.Token" hidden />

    <div class="row">
        <div class="col-12">
            <h4>Please Enter your username to reset the password.</h4>
        </div>
        <div class="col-6 pt-1">
            <div class="form-group">
                <input type="text" class="form-control textBox" placeholder="Username" id="resetOldPassword" name="resetOldPassword" required>
            </div>
        </div>
        <div class="col-6 pt-1">
            <div class="form-group">
                <input type="text" class="form-control textBox" placeholder="Username" id="resetNewPassword" name="resetNewPassword" required>
            </div>
        </div>
        <div class="col-6 pt-1">
            <div class="form-group">
                <input type="text" class="form-control textBox"  placeholder="Username" id="resetConfirmNewPassword" name="resetConfirmNewPassword" required>
            </div>
        </div>
        <div class="col-8 pt-1">
            <button id="forgotPassword" class="btn btn-primary">
                Ok
            </button>
        </div>
    </div>
</div>

<div class="container" id="emailSent">
    <p id="emailSentText"></p>
</div>



<header class="fixed-top">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light navColor box-shadow mb-3">
        <div class="container-fluid">
            <div class="row w-100">
                <div class="col-5 text-left">
                    <a asp-controller="Home" asp-action="Index"> <img class="cursorPointer" src="~/images/logos/Stoss.png" /> </a>
                </div>
                <div class="col-7 text-center d-flex">
                    <div class="d-flex align-items-center">
                        <div>
                            <img src="" alt="Profile Picture" class="rounded-circle" style="width: 30px; height: 30px;">
                        </div>
                        <div class="ml-2">
                            <span class="usernameMenu">@User.Identity.Name</span>
                            <i id="submenuToggle" class="fa fa-caret-down subMenuToogle ml-2"></i>
                        </div>
                        <div class="ml-3">
                            <div id="submenu" class="dropdown-menu" style="display: none;">
                                <a class="dropdown-item" href="/Home/ViewProfile">View Profile</a>
                                <a class="dropdown-item" href="/Home/Menu?name=ChangePassword">Change Password</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" id="logout" href="/Login/Logout">Logout</a>
                            </div>
                        </div>
                       
                     </div>
                </div>
            </div>
            <div class="mobile_nav">
                <div  class="nav_bar">
                    <i class="fa fa-bars nav_btn"></i>
                </div>
                <div class="mobile_nav_items">
                             <a href="#"><i class="fas fa-desktop"></i><span>Dashboard</span></a>
